function db_build_insert($table,$array)
{

    $str = "insert into $table ";
    $strn = "(";
    $strv = " VALUES (";
    while(list($name,$value) = each($array)) {

        if(is_bool($value)) {
            $strn .= "$name,";
            $strv .= ($value ? "true":"false") . ",";
            continue;
        };

        if(is_string($value)) {
            $strn .= "$name,";
            $strv .= "'$value',";
            continue;
        }
        if (!is_null($value) and ($value != "")) {
            $strn .= "$name,";
            $strv .= "$value,";
            continue;
        }
    }
    $strn[strlen($strn)-1] = ')';
    $strv[strlen($strv)-1] = ')';
    $str .= $strn . $strv;
    return $str.";";

}
